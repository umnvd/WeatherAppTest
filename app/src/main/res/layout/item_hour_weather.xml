<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingHorizontal="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewHourTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="22:00"
        style="@style/RegularGrayText"/>

    <ImageView
        android:id="@+id/imageViewHourWeatherIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/weather_icon_test" />

    <TextView
        android:id="@+id/textViewHourTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="+7\u00B0"
        style="@style/RegularWhiteText"/>

</LinearLayout>