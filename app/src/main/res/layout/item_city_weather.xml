<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:text="Ульяновск"
            android:paddingBottom="4dp"
            style="@style/TitleText" />

        <TextView
            android:id="@+id/textViewCityDayTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/textViewCityNightTemp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:text="+14\u00B0"
            android:paddingBottom="4dp"
            style="@style/TitleText"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewCityNightTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imageViewCityCurrentWeatherIcon"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:text="+7\u00B0"
            android:paddingBottom="4dp"
            style="@style/TitleGrayText" />

        <ImageView
            android:id="@+id/imageViewCityCurrentWeatherIcon"
            android:src="@drawable/weather_icon_test"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>