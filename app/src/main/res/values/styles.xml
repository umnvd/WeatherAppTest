<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="RegularText">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="SmallText">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="WhiteTitleText" parent="TitleText">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="BlackTitleText" parent="TitleText">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="WhiteRegularText" parent="RegularText">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="BlackRegularText" parent="RegularText">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

</resources>